<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View android:id="@+id/gesture_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true" />

        <FrameLayout android:id="@+id/fake_loader"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/app_background_color"
            android:visibility="gone"
            android:elevation="2dp"
            tools:visibility="gone">
            <LinearLayout android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <TextView style="@style/Base.TextAppearance.Heavy"
                    android:id="@+id/loadingText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Staring playback.."
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_giant"
                    android:layout_gravity="center"
                    android:textAlignment="center"/>

                <ProgressBar
                    android:id="@+id/progress_bar"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginVertical="20dp"
                    android:indeterminateBehavior="cycle"
                    android:indeterminate="true"
                    android:visibility="visible"
                    android:elevation="2dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:visibility="visible" />
            </LinearLayout>
        </FrameLayout>

        <com.google.android.exoplayer2.ui.PlayerView
            android:id="@+id/player_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            app:controller_layout_id="@layout/exo_playback_control_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            tools:src="@tools:sample/backgrounds/scenic"
            tools:visibility="visible"/>

        <androidx.core.widget.ContentLoadingProgressBar
            android:id="@+id/loading_bar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminate="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:progress="70"/>

        <Button style="@style/Widget.AppCompat.Button.Colored"
            android:id="@+id/retry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:text="@string/retry"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintHorizontal_bias="1.0" />

        <ImageView
            android:id="@+id/like_button"
            android:layout_width="@dimen/large_icon_size"
            android:layout_height="@dimen/large_icon_size"
            android:layout_margin="@dimen/inset_large"
            android:textAllCaps="true"
            android:src="@drawable/ic_baseline_favorite_24"
            android:elevation="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/input_container"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"/>

        <FrameLayout android:id="@+id/timed_progress_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="1dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="1.0"
            app:layout_constraintHorizontal_bias="1.0">

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/timed_progress_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:indeterminate="false"
                android:progress="0"
                app:indicatorDirectionCircular="clockwise" />

            <TextView style="@style/TextStyle.Tiny.Bold"
                android:id="@+id/tv_remaining_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:visibility="gone"
                tools:text="5" />
        </FrameLayout>

        <RelativeLayout android:id="@+id/input_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/comment_input_background"
            android:padding="@dimen/inset_very_small"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/bottom_spacer"
            app:layout_constraintVertical_bias="1.0"
            app:layout_constraintVertical_chainStyle="packed">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_message"
                style="@style/Widget.App.EditText.OutlinedBox.Rounded"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_touchable_inset"
                android:layout_marginTop="@dimen/default_touchable_inset"
                android:layout_marginEnd="@dimen/default_touchable_inset"
                android:layout_marginBottom="@dimen/default_touchable_inset"
                android:layout_toStartOf="@id/send_button"
                android:hint="Write.."
                android:inputType="textMultiLine"
                android:maxHeight="@dimen/multiline_text_max_height"
                android:maxLength="100"
                android:maxLines="2"
                android:paddingHorizontal="12dp"
                android:paddingVertical="10dp"
                android:textAppearance="@style/Base.TextAppearance"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_very_small" />

            <ImageView
                android:id="@+id/send_button"
                android:layout_width="@dimen/xlarge_icon_size"
                android:layout_height="@dimen/xlarge_icon_size"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="@dimen/default_touchable_inset"
                android:background="@drawable/rounded_fill"
                android:backgroundTint="@color/red_200"
                android:padding="6dp"
                android:src="@drawable/ic_baseline_send_24" />

        </RelativeLayout>

        <Space android:id="@+id/bottom_spacer"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/input_container"
            app:layout_constraintVertical_chainStyle="packed"
            tools:visibility="gone"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_gradient_from_bottom_right_light"
            app:layout_constraintWidth_percent="0.5"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <tyrantgit.widget.HeartLayout android:id="@+id/heart_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/like_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.5"
            app:layout_constraintHeight_percent="0.5" />

        <FrameLayout android:id="@+id/live_comments_container"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/input_container"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.6"
            app:layout_constraintHeight_percent="0.5"
            app:layout_constraintVertical_bias="1.0"
            app:layout_constraintHorizontal_bias="0.0">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/live_comments_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:reverseLayout="true"
                tools:listitem="@layout/comment_item"/>

        </FrameLayout>

        <LinearLayout android:orientation="horizontal"
            android:id="@+id/watch_count_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/inset_small"
            android:paddingVertical="@dimen/inset_very_small"
            android:paddingHorizontal="@dimen/inset_small"
            android:background="@drawable/bg_rounded"
            android:backgroundTint="@color/transparent_black"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintHorizontal_bias="0.0"
            tools:visibility="visible">

            <ImageView
                android:layout_width="@dimen/default_icon_size"
                android:layout_height="@dimen/default_icon_size"
                android:layout_marginStart="@dimen/inset_small"
                android:src="@drawable/ic_watch"
                android:layout_gravity="center"/>

            <TextView style="@style/TextStyle.VerySmall.Heavy"
                android:id="@+id/watch_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/inset_very_small"
                android:layout_marginEnd="@dimen/inset_small"
                android:textColor="@color/white"
                android:layout_gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintHorizontal_bias="0.0"
                tools:text="1k"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>