<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/app_background_color"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <include layout="@layout/default_app_toolbar"
            android:id="@+id/toolbar_included"
            app:layout_scrollEffect="compress"
            app:layout_scrollFlags="enterAlways|exitUntilCollapsed"/>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_curved_top"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--<include layout="@layout/square_grid_shimmer"
                android:id="@+id/grid_shimmer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="25dp"
                android:layout_marginHorizontal="5dp"/>-->

            <LinearLayout android:id="@+id/empty_content"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView style="@style/Base.TextAppearance.Medium"
                    android:id="@+id/empty_content_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/inset_large"
                    android:text="No Streams found"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_huge" />

            </LinearLayout>

            <TextView style="@style/Base.TextAppearance.Heavy"
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/inset_large"
                android:text="@string/streams"
                android:textSize="@dimen/text_size_huge"
                android:textColor="?attr/colorSecondaryVariant"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"/>
            
            <FrameLayout android:id="@+id/live_only_switch_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/inset_large"
                android:layout_marginTop="@dimen/inset_small"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.0">

                <com.google.android.material.switchmaterial.SwitchMaterial android:id="@+id/live_only_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Live Only"
                    android:enabled="true"
                    android:checked="true"
                    android:textAppearance="@style/TextStyle.VerySmall.Bold"
                    android:textColor="@color/white"/>

            </FrameLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/stream_list_view"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="25dp"
                android:layout_marginHorizontal="5dp"
                android:overScrollMode="never"
                android:layoutAnimation="@anim/layout_animation_pop_enter"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:listitem="@layout/stream_item"
                tools:itemCount="20"
                tools:visibility="visible"
                tools:layoutAnimation="@null"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <LinearLayout android:orientation="horizontal"
        android:id="@+id/fab_go_live"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/inset_large"
        android:paddingVertical="12dp"
        android:layout_margin="@dimen/default_fab_inset"
        android:layout_gravity="bottom|right"
        android:elevation="4dp"
        android:background="@drawable/bg_rounded"
        android:gravity="center">

        <ImageView android:id="@+id/fab_icon"
            android:layout_width="@dimen/default_icon_size"
            android:layout_height="@dimen/default_icon_size"
            android:padding="2dp"
            android:src="@drawable/ic_baseline_videocam_24"
            android:layout_marginStart="@dimen/inset_small"
            android:layout_marginEnd="@dimen/inset_very_small"
            app:tint="?attr/colorOnSecondary" />

        <TextView style="@style/Base.TextAppearance.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/inset_small"
            android:text="Go Live"
            android:textColor="?attr/colorOnSecondary"
            android:textSize="14sp" />

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fab_go_live_old"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_fab_inset"
        android:layout_gravity="bottom|right"
        app:icon="@drawable/ic_baseline_videocam_24"
        app:iconPadding="@dimen/inset_small"
        android:text="Go Live"
        android:textAppearance="@style/Base.TextAppearance.Medium"
        android:visibility="gone"
        tools:visibility="gone"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>